@page
@model LoginModel
@{
    ViewData["Title"] = "Sign in";
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["BodyClass"] = "page-auth";
}

<section id="hero"
         class="hero d-flex align-items-center auth-hero"
         style="background-image: url('@Url.Content("~/assets/img/auth-login.jpg")');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card shadow auth-card" data-aos="fade-up">
                    <div class="card-body p-4 p-lg-5">
                        <h2 class="mb-3 text-center text-uppercase">Sign in</h2>

                        <form id="loginForm" method="post">
                            <div asp-validation-summary="ModelOnly"
                                 class="text-danger mb-3"
                                 role="alert"></div>

                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email"
                                       class="form-control"
                                       autocomplete="username" />
                                <span asp-validation-for="Input.Email"
                                      class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password"
                                       class="form-control"
                                       autocomplete="current-password" />
                                <span asp-validation-for="Input.Password"
                                      class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe"></label>
                            </div>

                            <button type="submit"
                                    class="btn btn-primary w-100 mb-3">
                                Sign in
                            </button>

                            <p class="text-center mb-0">
                                Don’t have an account?
                                <a asp-page="./Register"
                                   asp-route-returnUrl="@Model.ReturnUrl"
                                   class="fw-semibold">
                                    Create account
                                </a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
