@model web_petshelter.Features.Statistics.StatisticsVm
@using System.Text.Json

@{
    ViewData["Title"] = "Statistics";
    ViewData["BodyClass"] = "light-background";

    // є хоч одна дата у фільтрі – вважаємо, що задано діапазон
    var hasRange = Model.From.HasValue || Model.To.HasValue;
}

<section class="section container statistics-page">

    <div class="section-title mb-4">
        <h2 class="mb-1">Statistics</h2>
        <p class="text-muted mb-0">
            View overall numbers or filter by date range.
        </p>
    </div>

    <form method="get" class="row g-3 align-items-end mb-4">
        <div class="col-sm-4 col-md-3">
            <label class="form-label" for="from">From</label>
            <input type="date"
                   class="form-control"
                   id="from"
                   name="from"
                   value="@(Model.From?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-sm-4 col-md-3">
            <label class="form-label" for="to">To</label>
            <input type="date"
                   class="form-control"
                   id="to"
                   name="to"
                   value="@(Model.To?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-sm-4 col-md-6 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Apply</button>
            <a asp-controller="Home"
               asp-action="Statistics"
               class="btn btn-outline-secondary">
                Clear
            </a>
        </div>
    </form>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="card-subtitle text-muted mb-2">Total shelters</h6>
                        @if (hasRange)
                        {
                            <span class="badge bg-light text-dark">Range</span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">All time</span>
                        }
                    </div>
                    <div class="fs-3 fw-semibold">@Model.TotalShelters</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted mb-2">Total animals</h6>
                    <div class="fs-3 fw-semibold">@Model.TotalAnimals</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted mb-2">Adoptions in period</h6>
                    <div class="fs-3 fw-semibold">@Model.AdoptionsThisPeriod</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h6 class="card-subtitle text-muted mb-3">Adoptions by month</h6>

            <div class="chart-container" style="height: 320px;">
                <canvas id="statsChart"></canvas>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = @Html.Raw(JsonSerializer.Serialize(Model.Chart.Labels));
        const points = @Html.Raw(JsonSerializer.Serialize(Model.Chart.Data));
        const datasetLabel = @Html.Raw(JsonSerializer.Serialize(Model.Chart.DatasetLabel));

        const ctx = document.getElementById('statsChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels,
                datasets: [{
                    label: datasetLabel,
                    data: points,
                    tension: 0.25,
                    pointRadius: 3,
                    borderWidth: 2,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: true, position: 'top' },
                    tooltip: { mode: 'index', intersect: false }
                },
                scales: {
                    y: { beginAtZero: true, ticks: { precision: 0 } }
                }
            }
        });
    </script>
}
