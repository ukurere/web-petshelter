@model web_petshelter.Models.ViewModels.StatsVm

@{
    ViewData["Title"] = "Home";
    ViewData["BodyClass"] = "index-page";
}

<section id="hero" class="hero section dark-background">
    <img src="~/assets/img/hero-bg.jpg"
         alt="Happy dog"
         asp-append-version="true" />

    <div class="container d-flex flex-column align-items-center justify-content-center text-center"
         data-aos="fade-up">
        <h1 class="mb-3">PLAN. RUN IT. HELP.</h1>
        <p class="mb-4 lead">
            We help to find a home for animals from Shelters. View the list, apply filters and choose your friend ❤️
        </p>

        <div class="d-flex gap-3">
            <a class="btn btn-primary btn-lg"
               asp-controller="Animals"
               asp-action="Index">
                View animals
            </a>

            <a class="btn btn-outline-light btn-lg"
               asp-controller="Shelters"
               asp-action="Index">
                Shelters
            </a>
        </div>
    </div>
</section>

<section id="about" class="about section">
    <div class="container" data-aos="fade-up">
        <div class="row gy-4 align-items-center">
            <div class="col-lg-6">
                <img src="~/assets/img/about.jpg"
                     class="img-fluid rounded-3"
                     alt="About PetShelter">
            </div>
            <div class="col-lg-6">
                <h3>About PetShelter</h3>
                <p class="mb-3">
                    Simple demo content from the theme. Replace with your copy later.
                </p>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="bi bi-check2-circle me-2 text-success"></i>
                        Adopt pets from trusted shelters
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check2-circle me-2 text-success"></i>
                        See branches on map
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check2-circle me-2 text-success"></i>
                        Public pages for each animal
                    </li>
                </ul>
                <a class="btn btn-primary mt-2"
                   asp-controller="Animals"
                   asp-action="Index">
                    Browse Animals
                </a>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container text-center" data-aos="zoom-in">
        <h3 class="mb-3">Ready to adopt?</h3>
        <p class="mb-4">Check out our latest animals and shelters.</p>
        <a asp-controller="Animals"
           asp-action="Index"
           class="btn btn-outline-primary me-2">
            Animals
        </a>
        <a asp-controller="Shelters"
           asp-action="Index"
           class="btn btn-outline-secondary">
            Shelters
        </a>
    </div>
</section>

<section id="stats" class="stats section">
    <div class="container">
        <div class="row text-center gy-4">
            <div class="col-6 col-md-3">
                <h3>@Model.Animals</h3>
                <p>Animals</p>
            </div>
            <div class="col-6 col-md-3">
                <h3>@Model.Shelters</h3>
                <p>Shelters</p>
            </div>
            <div class="col-6 col-md-3">
                <h3>@Model.Adoptions</h3>
                <p>Adoptions</p>
            </div>
            <div class="col-6 col-md-3">
                <h3>@Model.Adopted</h3>
                <p>Unique adopted</p>
            </div>
        </div>
    </div>
</section>