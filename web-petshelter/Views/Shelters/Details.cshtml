@model web_petshelter.Models.Shelter
@{
    ViewData["Title"] = "Shelter Details";
}
<h1>Shelter Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">City</dt>
        <dd class="col-sm-9">@Model.City</dd>

        <dt class="col-sm-3">Lat (°)</dt>
        <dd class="col-sm-9">@Model.Lat</dd>

        <dt class="col-sm-3">Lng (°)</dt>
        <dd class="col-sm-9">@Model.Lng</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Work hours</dt>
        <dd class="col-sm-9">@Model.WorkHours</dd>

        <dt class="col-sm-3">Photo</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrWhiteSpace(Model.PhotoUrl))
            {
                <img src="@Model.PhotoUrl" alt="Photo" style="max-width:260px" />
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
