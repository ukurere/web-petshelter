@model web_petshelter.Models.Shelter

@{
    ViewData["Title"] = "Shelter details";
    ViewData["BodyClass"] = "light-background";
}

<section class="section container">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <!-- Заголовок + кнопки -->
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div class="mb-2">
                    <h1 class="h3 mb-1">@Model.Name</h1>
                    <p class="text-muted mb-0">
                        @Model.City, @Model.Address
                    </p>
                </div>

                <div class="btn-group">
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-primary">
                        Edit
                    </a>
                    <a asp-action="Index"
                       class="btn btn-outline-secondary">
                        Back
                    </a>
                </div>
            </div>

            <div class="row g-4">
                <!-- Інфо про шелтер + фото -->
                <div class="col-md-5">
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <h2 class="h5 mb-3">Shelter info</h2>

                            <dl class="row mb-0 small">
                                <dt class="col-5 text-muted">Address</dt>
                                <dd class="col-7">@Model.Address</dd>

                                <dt class="col-5 text-muted">City</dt>
                                <dd class="col-7">@Model.City</dd>

                                <dt class="col-5 text-muted">Phone</dt>
                                <dd class="col-7">@Model.Phone</dd>

                                <dt class="col-5 text-muted">Work hours</dt>
                                <dd class="col-7">@Model.WorkHours</dd>

                                <dt class="col-5 text-muted">Latitude</dt>
                                <dd class="col-7">@Model.Lat</dd>

                                <dt class="col-5 text-muted">Longitude</dt>
                                <dd class="col-7">@Model.Lng</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.PhotoUrl))
                    {
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h2 class="h6 mb-3">Photo</h2>
                                <img src="@Model.PhotoUrl"
                                     alt="Shelter photo"
                                     class="img-fluid rounded"
                                     style="max-height: 260px; object-fit: cover;">
                            </div>
                        </div>
                    }
                </div>

                <!-- Карта -->
                <div class="col-md-7">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h2 class="h5 mb-3">Location on map</h2>

                            <div id="shelterMap"
                                 data-lat="@Model.Lat"
                                 data-lng="@Model.Lng"
                                 style="height: 360px; border-radius: .5rem; overflow: hidden;">
                            </div>

                            <p class="text-muted small mt-2 mb-0">
                                Lat: @Model.Lat; Lng: @Model.Lng
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section Styles {
    <!-- Leaflet CSS (якщо ще не підключений у layout) -->
    <link rel="stylesheet"
          href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
}

@section Scripts {
    <!-- Leaflet JS (якщо ще не підключений у layout) -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin="">
    </script>

    <script>
        (function () {
            const mapEl = document.getElementById("shelterMap");
            if (!mapEl) return;

            // беремо як є, але замінюємо кому на крапку, щоб parseFloat відпрацював
            const rawLat = mapEl.dataset.lat || "";
            const rawLng = mapEl.dataset.lng || "";

            const lat = parseFloat(rawLat.replace(",", "."));
            const lng = parseFloat(rawLng.replace(",", "."));

            if (Number.isNaN(lat) || Number.isNaN(lng)) {
                console.warn("Invalid shelter coordinates:", rawLat, rawLng);
                return;
            }

            const map = L.map(mapEl).setView([lat, lng], 14);

            L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
                maxZoom: 19,
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            L.marker([lat, lng])
                .addTo(map)
                .bindPopup("@Model.Name")
                .openPopup();
        })();
    </script>
}
