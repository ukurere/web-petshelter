@using web_petshelter.Models
@model IEnumerable<Shelter>
@{
    ViewData["Title"] = "Our Shelters";
    ViewData["BodyClass"] = "light-background"; // світлий фон під тему
    var isAdmin = User.IsInRole("Admin");
}

<section class="section container">
    <div class="section-title" data-aos="fade-up">
        <h2>Our Shelters</h2>
        <p>Check our shelters</p>
    </div>

    <!-- Фільтр -->
    <form method="get" class="row g-2 mb-4" data-aos="fade-up">
        <div class="col-sm-6 col-md-4">
            <input name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Search by name or address..." />
        </div>
        <div class="col-sm-4 col-md-3">
            <input name="city" value="@Context.Request.Query["city"]" class="form-control" placeholder="City..." />
        </div>
        <div class="col-sm-2 col-md-2">
            <button class="btn btn-primary w-100" type="submit">Search</button>
        </div>
        @if (isAdmin)
        {
            <div class="col-12 col-md-auto ms-md-auto text-md-end">
                <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
            </div>
        }
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Nothing found.</div>
    }
    else
    {
        <div class="row gy-5" data-aos="fade-up" data-aos-delay="100">
            @foreach (var s in Model)
            {
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm">
                        <div class="ratio ratio-16x9">
                            @{
                                // if null/empty -> placeholder
                                string photo = string.IsNullOrWhiteSpace(s.PhotoUrl)
                                ? Url.Content("~/assets/img/shelters/placeholder.jpg")
                                : (s.PhotoUrl.StartsWith("~")
                                ? Url.Content(s.PhotoUrl)
                                : Url.Content("~" + (s.PhotoUrl.StartsWith("/") ? s.PhotoUrl : "/" + s.PhotoUrl)));
                            }
                            <img class="card-img-top" src="@photo" alt="@s.Name" />
                        </div>

                        <div class="card-body">
                            <h4 class="card-title mb-1">@s.Name</h4>

                            @if (!string.IsNullOrWhiteSpace(s.Address))
                            {
                                <div class="text-muted">@s.Address</div>
                            }

                            <div class="d-flex align-items-center gap-2 mt-1 text-secondary">
                                <i class="bi bi-geo-alt"></i>
                                <span>@(string.IsNullOrWhiteSpace(s.City) ? "—" : s.City)</span>
                            </div>

                            <div class="mt-3 d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-primary">Details</a>
                                @if (isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-outline-secondary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
</section>
