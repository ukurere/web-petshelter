@model web_petshelter.Models.Shelter
@{
    ViewData["Title"] = "Edit Shelter";
}
<h1>Edit Shelter</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-row d-flex gap-3">
        <div class="form-group">
            <label asp-for="Lat">Lat (°)</label>
            <input asp-for="Lat" type="number" step="0.000001" class="form-control" />
            <span asp-validation-for="Lat" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lng">Lng (°)</label>
            <input asp-for="Lng" type="number" step="0.000001" class="form-control" />
            <span asp-validation-for="Lng" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkHours"></label>
        <input asp-for="WorkHours" class="form-control" />
        <span asp-validation-for="WorkHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhotoUrl"></label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
